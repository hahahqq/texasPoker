                @hide="hidePopover()"
                trigger="click"
              >
                <div slot="reference">
                  <el-col :span="5" style="float: left">
                    <img :src="item.img" alt class="vertical-middle" width="44px" height="44px" />
                  </el-col>
                  <el-col :span="19" style="float: left">
                    <span style="margin-top: 0" class="text-666">{{ item.title }}</span>
                    <span class="m-top-sm h6" style="color: #868686">{{ item.des }}</span>
                  </el-col>
                </div>

                <el-form
                  :model="ruleForm2"
                  status-icon
                  :rules="rules2"
                  ref="ruleForm2"
                  label-width="0"
                >
                  <el-form-item label prop="PhoneNo">
                    <el-input
                      type="number"
                      v-model.number="ruleForm2.PhoneNo"
                      placeholder="请留下您的手机号码"
                    ></el-input>
                  </el-form-item>
                  <el-form-item label prop="Remark">
                    <el-input
                      type="textarea"
                      v-model="ruleForm2.Remark"
                      placeholder="请留下您的宝贵意见"
                    ></el-input>
                  </el-form-item>
                  <el-form-item class="no-m-bottom">
                    <el-button-group class="full-width">
                      <el-button
                        type="primary"
                        @click="submitForm2"
                        :loading="loading2"
                        style="width: 100%"
                      >
                        提 交
                      </el-button>
                    </el-button-group>
                  </el-form-item>
                </el-form>
              </el-popover>
            </div>
          </el-row>
        </el-col>
      </el-row>
    </div>
    <div class="replace-dialog">
      <el-dialog
        title="更新公告"
        :visible.sync="dialogVisibleReplace"
        width="50%"
        :show-close="false"
      >
        <span style="color: #2589ff">V2.1.7更新内容</span>
        <div v-for="itemname in replaceList" :key="itemname.id">
          <div style="margin-top: 20px">{{ itemname.name }}</div>
        </div>
        <span slot="footer" class="dialog-footer" @click="dialogVisibleReplace = false">
          我知道了
        </span>
      </el-dialog>
    </div>
  </div>
