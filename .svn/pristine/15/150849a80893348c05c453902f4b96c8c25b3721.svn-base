              "BILLNO",
              "SHOPNAME",
              "BILLTYPE",
              "GOODSNAME",
              "PRICE",
              "QTY",
              "PAYMONEY",
              "SALEEMPNAME",
              "USERNAME",
              "VIPNAME",
              "ISCANCEL",
              "REMARK"
          ];
          var title = "营业查询" + this.getNowDateTime();
          this.export2Excel(head, val, list, title);
      },
